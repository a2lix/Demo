{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block content %}
    <h1>{{ block('title') }}</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ company.code }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ company.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ company.description }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>{{ company.categories|length ? company.categories|map(c => "#{c.title}")|join(', ') : 'None' }}</td>
            </tr>
            <tr>
                <th>Media</th>
                <td>{{ company.mediaLocalized(app.request.locale).url ?? 'None' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="record_actions">
        {{ form(deleteForm) }}
        <a class="btn btn-outline-primary btn-lg btn-block" href="{{ path('backend_company_edit', {'id': company.id}) }}">Edit</a>
        <a class="btn btn-outline-primary btn-lg btn-block" href="{{ path('backend_company_index') }}">Back to list</a>
    </div>
{% endblock %}
